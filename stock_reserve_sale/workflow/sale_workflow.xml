<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="act_reserve" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">reserve</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'reserve'})</field>
        </record>



        <record id="sale.trans_draft_router" model="workflow.transition">
            <field name="act_from" ref="sale.act_draft"/>
            <field name="act_to" ref="act_reserve"/>
            <field name="signal">order_reserve</field>
        </record>

        <record id="sale.trans_sent_router" model="workflow.transition">
            <field name="act_from" ref="sale.act_sent"/>
            <field name="act_to" ref="act_reserve"/>
            <field name="signal">order_reserve</field>
        </record>

        <record id="trans_reserve_router" model="workflow.transition">
            <field name="act_from" ref="act_reserve"/>
            <field name="act_to" ref="sale.act_router"/>
            <field name="signal">order_confirm</field>
        </record>

     </data>
</openerp>